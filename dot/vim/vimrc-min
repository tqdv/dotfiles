" version: 0.2.0
" notes:
"   - Q :noh[lsearch]
"   - i_jkj <Esc>

set nocompatible
set encoding=utf-8
set history=50

set ruler
set number relativenumber numberwidth=4

set splitbelow splitright

filetype plugin indent on
syntax enable

set listchars=tab:» ,trail:·
" ^K>> ^K<Space><Space> ^K.M 

set hlsearch
noremap <silent> Q <Esc>:noh<CR>

set autoindent smartindent smarttab
set tabstop=4 shiftwidth=4

set timeoutlen=300
map Y y$
inoremap jkj <Esc>

set backspace=2
